{
  "extends": "next",
  "rules": {
    "no-console": "off",
    "react/no-unescaped-entities": "off",
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "space-before-blocks": [
      "error",
      {
        "functions": "always",
        "keywords": "always",
        "classes": "always"
      }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ]
  }
}
